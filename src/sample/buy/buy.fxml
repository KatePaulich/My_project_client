<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.buy.Buy">
   <children>
      <TableView fx:id="tableBuy" editable="true" layoutX="4.0" layoutY="97.0" prefHeight="299.0" prefWidth="592.0">
        <columns>
          <TableColumn fx:id="name" prefWidth="362.0" text="Наименование" />
          <TableColumn fx:id="price" minWidth="0.0" prefWidth="229.0" text="Стоимость" />
        </columns>
      </TableView>
      <DatePicker fx:id="date" editable="false" layoutX="134.0" layoutY="15.0" onAction="#pressDate" prefHeight="31.0" prefWidth="329.0" promptText="Пожалуйста, выберите дату здесь --------&gt;" />
      <TextField fx:id="nameBuy" layoutX="4.0" layoutY="56.0" prefHeight="31.0" prefWidth="197.0" promptText="наименование" />
      <TextField fx:id="priceBuy" layoutX="216.0" layoutY="56.0" prefHeight="31.0" prefWidth="187.0" promptText="стоимость" />
      <Button layoutX="412.0" layoutY="56.0" mnemonicParsing="false" onAction="#pressAddButton" prefHeight="31.0" prefWidth="89.0" text="Добавить" />
      <Button layoutX="507.0" layoutY="56.0" mnemonicParsing="false" onAction="#pressDeleteButton" prefHeight="31.0" prefWidth="89.0" text="Удалить" />
   </children>
</AnchorPane>
